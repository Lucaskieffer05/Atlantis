<Application x:Class="Atlantis.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Atlantis"
             Startup="IniciarAplicacion">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Dictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Control">
                <Setter Property="FontSize" Value="20"/>
            </Style>
            <BitmapImage x:Key="ImagenSi" UriSource="/Atlantis;component/Images/si.png" />
        </ResourceDictionary>


    </Application.Resources>


</Application>
