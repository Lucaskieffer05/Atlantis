                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>
                </DataGrid>

                <controlusuario:DetallesCliente DataContext="{Binding DetallesClienteViewModel}" 
                                                Visibility="{Binding MostrarDetalles}"
                                                Grid.Row="1"
                                                Grid.RowSpan="3" />

            </Grid>
        </Border>
    </Border>
</Window>
